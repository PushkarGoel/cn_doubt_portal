<!DOCTYPE html>
  <html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login Doubt Portal</title>
  </head>
  <body>

    <nav class="navbar navbar-light bg-light">
      <div class="row col-12">
      <div class="mx-4 col-1">
        <img src="images/cn_logo.jpg" width="30" height="30" alt="">
      </div>
      <div class="col-7">
        <h3>Login</h3>
      </div>
  <!--     <div class="row col-4"> -->
      </div>
    </nav>
    <div class="row col-12">
      <div class="col-2"><br></div>
      <div class="container mt-4 col-6">
        <% if( msg != undefined ){ %>
            <div class="alert alert-danger" role="alert">
              <%= msg %>
            </div>
        <% }%>
        <form action="/auth" method="post">
          <div class="mb-3 col-6">
            <label for="inputmail" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" id="inputmail" aria-describedby="emailHelp" required="">
          </div>
          <div class="mb-3 col-6">
            <label for="inputpass" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="inputpass">
          </div>
          <button type="submit" class="btn btn-primary text-center">Login</button>
        </form>
        <a  href="/signup">New user? Click to Sign up</a>
    </div>
  </div>
  </body>
</html>